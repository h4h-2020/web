doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.8.0/css/bulma.min.css' integrity='sha256-D9M5yrVDqFlla7nlELDaYZIpXfFWDytQtiV+TaH6F1I=' crossorigin='anonymous')
    script(defer='' src='https://use.fontawesome.com/releases/v5.3.1/js/all.js')
  body
    nav.navbar(role='navigation' aria-label='main navigation')
      .container
        .navbar-brand
          a.navbar-item(href='/')
            strong Home
          button.button.navbar-burger(data-target='navMenu')
            span
            span
            span
        #navMenu.navbar-menu
          .navbar-start
            // navbar items
            a.navbar-item(href='/forms')
              | Add more Information
          .navbar-end
            if admin
              .navbar-item
                a.button.is-primary(href='/admins/logout') LOG OUT
            if user
              .navbar-item
                a.button.is-primary(href='/logout') LOG OUT
            if !user && !admin
              .navbar-item
                a.button.is-primary(href='/register') SIGN UP
            if !user && !admin
              .navbar-item
                a.button.is-light(href='/login') LOG IN
    .container(style='top: 32px')
      p #{flash}
      block content
