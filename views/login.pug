extends layout

block content
  .main.container
    .row
      .columns.is-mobile
        .column.is-half.is-offset-one-quarter
          label.label Login to Boost
          form(method='POST' action='/login')
            .field
              p.control.has-icons-left.has-icons-right
                input.input(type='text' name='login' value='' placeholder='Email')
                span.icon.is-small.is-left
                  i.fas.fa-envelope
                span.icon.is-small.is-right
                  i.fas.fa-check
            .field
              p.control.has-icons-left
                input.input(type='password' placeholder='Password' name='password')
                span.icon.is-small.is-left
                  i.fas.fa-lock
            p.remember_me
              label
                input#remember_me(type='checkbox' name='remember_me')
                |               Remember me on this computer
            .field
              .control
                input.button.is-success(type='submit' name='commit' value='Login')

        .login-help
          p
            | Forgot your password? 
            a(href='#') Click here to reset it
            | .
